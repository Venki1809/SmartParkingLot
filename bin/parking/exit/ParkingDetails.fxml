<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="parking.exit.ParkingDetailsController">
    <children>
        <Label alignment="CENTER" layoutX="2.0" layoutY="4.0" prefHeight="35.0" prefWidth="393.0" text="Parking Details">
         <font>
            <Font name="Bookman Old Style Bold" size="16.0" />
         </font></Label>
        
        <Label layoutX="20.0" layoutY="60.0" text="ID:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <TextField fx:id="idLabel" disable="true" layoutX="150.0" layoutY="60.0" prefHeight="23.0" prefWidth="163.0">
         <font>
            <Font name="Bookman Old Style Bold" size="13.0" />
         </font></TextField>
        
        <Label layoutX="20.0" layoutY="100.0" text="Vehicle Number:">
         <font>
            <Font name="Bookman Old Style Bold" size="14.0" />
         </font></Label>
        <TextField fx:id="vehicleNumberLabel" disable="true" layoutX="150.0" layoutY="100.0">
        <font>
            <Font name="Bookman Old Style Bold" size="13.0" />
         </font></TextField>
        
        <Label layoutX="20.0" layoutY="140.0" text="Vehicle Type:">
         <font>
            <Font name="Bookman Old Style Bold" size="14.0" />
         </font></Label>
        <TextField fx:id="vehicleTypeLabel" disable="true" layoutX="150.0" layoutY="140.0">
        <font>
            <Font name="Bookman Old Style Bold" size="13.0" />
         </font></TextField>
        
        <Label layoutX="20.0" layoutY="180.0" text="Spot ID:">
         <font>
            <Font name="Bookman Old Style Bold" size="14.0" />
         </font></Label>
        <TextField fx:id="spotIdLabel" disable="true" layoutX="150.0" layoutY="180.0">
        <font>
            <Font name="Bookman Old Style Bold" size="13.0" />
         </font></TextField>
        
        <Label layoutX="20.0" layoutY="220.0" text="Email ID:">
         <font>
            <Font name="Bookman Old Style Bold" size="14.0" />
         </font></Label>
        <TextField fx:id="emailIdLabel" disable="true" layoutX="150.0" layoutY="220.0">
        <font>
            <Font name="Bookman Old Style Bold" size="13.0" />
         </font></TextField>
        
        <Label layoutX="20.0" layoutY="260.0" text="Entry Time:">
         <font>
            <Font name="Bookman Old Style Bold" size="14.0" />
         </font></Label>
        <TextField fx:id="entryTimeLabel" disable="true" layoutX="150.0" layoutY="260.0">
        <font>
            <Font name="Bookman Old Style Bold" size="13.0" />
         </font></TextField>
        
        <Label layoutX="20.0" layoutY="300.0" text="Exit Time:">
         <font>
            <Font name="Bookman Old Style Bold" size="14.0" />
         </font></Label>
        <TextField fx:id="exitTimeLabel" disable="true" layoutX="150.0" layoutY="300.0">
        <font>
            <Font name="Bookman Old Style Bold" size="13.0" />
         </font></TextField>
        
        <Label layoutX="20.0" layoutY="340.0" text="Fare:">
         <font>
            <Font name="Bookman Old Style Bold" size="14.0" />
         </font></Label>
        <TextField fx:id="fareLabel" disable="true" layoutX="150.0" layoutY="340.0">
        <font>
            <Font name="Bookman Old Style Bold" size="13.0" />
         </font></TextField>
        
        <!-- Payment Type Radio Buttons -->
        <Label layoutX="20.0" layoutY="380.0" text="Payment Type:">
         <font>
            <Font name="Bookman Old Style Bold" size="14.0" />
         </font></Label>
        <RadioButton fx:id="cashRadio" layoutX="150.0" layoutY="380.0" text="Cash">
         <toggleGroup>
            <ToggleGroup fx:id="paymentTypeGroup" />
         </toggleGroup>
         <font>
            <Font name="System Bold" size="13.0" />
         </font></RadioButton>
        <RadioButton fx:id="cardRadio" layoutX="215.0" layoutY="380.0" text="Card" toggleGroup="$paymentTypeGroup">
         <font>
            <Font name="Bookman Old Style Bold" size="13.0" />
         </font></RadioButton>
        <RadioButton fx:id="walletRadio" layoutX="272.0" layoutY="380.0" text="Wallet" toggleGroup="$paymentTypeGroup">
         <font>
            <Font name="Bookman Old Style Bold" size="13.0" />
         </font></RadioButton>
        
        <!-- Submit Button -->
        <Button fx:id="submit" layoutX="58.0" layoutY="420.0" onAction="#handleSubmit" prefHeight="26.0" prefWidth="99.0" style="-fx-background-color: #4a84f7;" text="Submit" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
      <Button layoutX="200.0" layoutY="420.0" onAction="#handleHome" mnemonicParsing="false" prefHeight="26.0" prefWidth="120.0" style="-fx-background-color: #4a84f7;" text="Back to Home" textFill="WHITE">
         <font>
            <Font name="Bookman Old Style Bold" size="13.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
