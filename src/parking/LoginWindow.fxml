<AnchorPane prefHeight="250.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="parking.LoginController">
    <children>
        <Label layoutX="50.0" layoutY="72.0" text="Username:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
        <TextField fx:id="usernameField" layoutX="150.0" layoutY="68.0" />
        
        <Label layoutX="52.0" layoutY="116.0" text="Password:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
        <PasswordField fx:id="passwordField" layoutX="150.0" layoutY="112.0" />
        
        <Button layoutX="132.0" layoutY="172.0" onAction="#handleLoginButtonAction" prefHeight="26.0" prefWidth="85.0" style="-fx-background-color: #4a84f7;" text="Login" textFill="WHITE">
         <effect>
            <Blend />
         </effect>
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
      <TextFlow prefHeight="24.0" prefWidth="333.0" />
      <Label alignment="CENTER" layoutX="-1.0" layoutY="11.0" prefHeight="24.0" prefWidth="333.0" text="Smart Parking">
         <font>
            <Font name="Bookman Old Style Bold" size="16.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
