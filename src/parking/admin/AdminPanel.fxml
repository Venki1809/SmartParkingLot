<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<TabPane fx:id="adminTabPane" prefHeight="400.0" prefWidth="362.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="parking.admin.AdminPanelController">
    <tabs>
        <Tab text="Parking Settings">
            <content>
                <AnchorPane>
                    <VBox layoutX="75.0" layoutY="4.0" prefHeight="341.0" prefWidth="219.0" spacing="10">
                        <Label alignment="CENTER" prefHeight="27.0" prefWidth="218.0" style="-fx-font-size: 18px;" text="Parking Settings" />
                        <Label text="Number of 2-Wheeler Spots:" />
                        <TextField fx:id="numberOf2WheelerSpotsField" nodeOrientation="LEFT_TO_RIGHT" prefHeight="26.0" prefWidth="182.0" scaleShape="false" style="-fx-max-width: 160px;" />

                        <Label text="Number of 4-Wheeler Spots:" />
                        <TextField fx:id="numberOf4WheelerSpotsField" style="-fx-max-width: 160px;" />

                        <Label prefHeight="18.0" prefWidth="219.0" text="Parking Fare for 2-Wheeler (per hour):" />
                        <TextField fx:id="parkingFareField" style="-fx-max-width: 160px;" />
                  <Label prefHeight="18.0" prefWidth="216.0" text="Parking Fare for 2-Wheeler (per hour):" />
                  <TextField fx:id="parkingFareField1" style="-fx-max-width: 160px;" />

                        <Button onAction="#handleSaveSettings" style="-fx-background-color: #4a84f7;" text="Save Settings" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Button>
                    </VBox>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Change Password">
            <content>
                <AnchorPane prefHeight="371.0" prefWidth="521.0">
                    <VBox layoutX="50.0" layoutY="50.0" prefHeight="269.0" prefWidth="240.0" spacing="10">
                        <Label alignment="CENTER" prefHeight="27.0" prefWidth="239.0" style="-fx-font-size: 18px;" text="Change Password" />
                        <Label text="Current Password:" />
                        <TextField fx:id="currentPasswordField" style="-fx-max-width: 160px;" />

                        <Label text="New Password:" />
                        <TextField fx:id="newPasswordField" style="-fx-max-width: 160px;" />

                        <Label text="Confirm New Password:" />
                        <TextField fx:id="confirmNewPasswordField" style="-fx-max-width: 160px;" />

                        <Button onAction="#handleChangePassword" style="-fx-background-color: #4a84f7;" text="Change Password" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Button>
                    </VBox>
                </AnchorPane>
            </content>
        </Tab>
    </tabs>
</TabPane>
